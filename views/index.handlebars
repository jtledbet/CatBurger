    <h1 align="center" id="header">^ↀᴥↀ^ [ Cat Burgers! ] ≧◔◡◔≦</h1>
    
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-4" id="undevoured-column">
          <div class="card" style="width: 18rem;">
            <div class="card-header">
              <h2>Undevoured!</h2>
            </div>
          </div>
          {{#each burgers}}
          {{#unless devoured}}
          <div class="card" style="width: 18rem;">
            <div class="card-header"><b>{{name}}</b></div>
            <div class="card-body">
              <p>{{> burgers/burger-block devoured=false}}</p>
            </div>
            <div class="card-footer">{{> burgers/burger-delete}}</div>
          </div>
          {{/unless}}
          {{/each}}
          
        </div>
    
          <div class="col-sm-4" id="add-catburger-card">
            <div class="card" style="width: 18rem;">
              <div class="card-header">
                <h2>Create a Cat Burger</h2>
              </div>
              <div class="card-body">
                <form class="create-form">
                  <div class="form-group">
                    <label for="catburga">Cat Burger Name:</label>
                    <input type="text" id="catburga" name="name">
                  </div>
              </div>
              <div class="card-footer">
                <button type="submit">Create Cat Burger</button>
              </div>
              </form>
            </div>
          </div>
        
    
          <div class="col-sm-4" id="devoured-column">
            <div class="card" style="width: 18rem;">
              <div class="card-header">
                <h2>Devoured!</h2>
              </div>
            </div>
            {{#each burgers}}
            {{#if devoured}}
            <div class="card" style="width: 18rem;">
              <div class="card-header"><b>{{name}}</b></div>
              <div class="card-body">
              <p>{{> burgers/burger-block devoured=true}}</p>
            </div>
            <div class="card-footer">{{> burgers/burger-delete}}</div>
          </div>
            {{/if}}
            {{/each}}
          </div>
        
      </div>
    </div>